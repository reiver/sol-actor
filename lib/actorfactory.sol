pragma solidity ^0.8.13;

import "./actor.sol"

contract ActorFactory {

	////////////////////////////////////////////////////////////////////////////////////////////////////
	// STORAGE                                                                                        //
	////////////////////////////////////////////////////////////////////////////////////////////////////

	Actor[] public actors;

	////////////////////////////////////////////////////////////////////////////////////////////////////
	// PUBLIC FUNCTIONS                                                                               //
	////////////////////////////////////////////////////////////////////////////////////////////////////

	function createActor() public returns (address) {
		uint actorid = _actors.length;
		Actor actor = new Actor(actorid);
		_actors.push(actor);
	}
}
